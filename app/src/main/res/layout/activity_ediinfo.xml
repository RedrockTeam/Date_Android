<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >
    <include layout="@layout/include_toolbar" />
    <LinearLayout
        android:background="@color/grayLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/edit_touxiang_layout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="72dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/edit_touxiang_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                app:progressBarImage="@drawable/ic_loading"
                app:progressBarImageScaleType="centerCrop"
                app:roundAsCircle="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edit_name_layout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                /><TextView
                android:id="@+id/edit_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="村里没有巧克力"
                android:layout_centerVertical="true"
                android:textColor="@color/blackHint"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edit_sign_layout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签名"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                /><TextView
            android:id="@+id/edit_sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生命不息折腾不止"
            android:layout_centerVertical="true"
            android:textColor="@color/blackHint"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edit_gender_layout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                /><TextView
            android:id="@+id/edit_gender_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:layout_centerVertical="true"
            android:textColor="@color/blackHint"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edit_academy_layout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学院"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                /><TextView
            android:id="@+id/edit_academy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="传媒艺术学院"
            android:layout_centerVertical="true"
            android:textColor="@color/blackHint"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edit_grade_layout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年级"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                /><TextView
            android:id="@+id/edit_grade_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2013级"
            android:layout_centerVertical="true"
            android:textColor="@color/blackHint"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edit_tel_layout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                /><TextView
            android:id="@+id/edit_tel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入"
            android:layout_centerVertical="true"
            android:textColor="@color/blackHint"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edit_qq_layout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                /><TextView
            android:id="@+id/edit_qq_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入"
            android:layout_centerVertical="true"
            android:textColor="@color/blackHint"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edit_weixin_layout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                /><TextView
            android:id="@+id/edit_wexin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入"
            android:layout_centerVertical="true"
            android:textColor="@color/blackHint"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/bottom_shadow"/>

    </LinearLayout>
</LinearLayout>
