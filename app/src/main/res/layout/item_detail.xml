<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/author_report_face_detail1"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="16dp"
            app:progressBarImage="@drawable/ic_loading"
            app:progressBarImageScaleType="centerInside"
            app:roundAsCircle="true" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/author_report_face_detail2"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="16dp"
            app:progressBarImage="@drawable/ic_loading"
            app:progressBarImageScaleType="centerInside"
            app:roundAsCircle="true" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/author_report_face_detail3"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="16dp"
            app:progressBarImage="@drawable/ic_loading"
            app:progressBarImageScaleType="centerInside"
            app:roundAsCircle="true" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/author_report_face_detail4"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="16dp"
            app:progressBarImage="@drawable/ic_loading"
            app:progressBarImageScaleType="centerInside"
            app:roundAsCircle="true" />
    </FrameLayout>
</LinearLayout>